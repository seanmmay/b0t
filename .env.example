# Database Configuration
# For local development, leave DATABASE_URL empty to use SQLite
# For production (Railway), set this to your PostgreSQL connection string
DATABASE_URL=

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Twitter/X API Configuration
# OAuth 1.0a (for automated posting with app credentials)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# OAuth 2.0 (for user login in settings page)
# Get these from Twitter Developer Portal → Your App → Keys and tokens
TWITTER_CLIENT_ID=your_twitter_oauth2_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_oauth2_client_secret_here

# NextAuth.js Configuration
# Generate a secret: `openssl rand -base64 32` or use: https://generate-secret.vercel.app/32
AUTH_SECRET=your_auth_secret_here
# For Railway: https://your-app.railway.app
# For local: http://localhost:3000
AUTH_URL=http://localhost:3000

# Admin Credentials (Single User App)
ADMIN_EMAIL=admin@socialcat.com
ADMIN_PASSWORD=your_secure_password_here

# YouTube Data API v3 Configuration
YOUTUBE_CLIENT_ID=your_youtube_oauth_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_oauth_client_secret
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/youtube/callback

# Instagram Graph API Configuration
# Requires Instagram Business/Creator account linked to Facebook Page
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Upstash Redis (Optional - for rate limiting in production)
# Get free account at: https://upstash.com
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# RapidAPI Configuration
# Get your key at: https://rapidapi.com
RAPIDAPI_KEY=your_rapidapi_key_here

# Twitter Reply Workflow Configuration
# Search query for tweets to reply to (e.g., "AI", "nextjs", "your-topic")
TWITTER_REPLY_SEARCH_QUERY=AI
# Optional: Custom system prompt for AI reply generation (leave empty for default)
TWITTER_REPLY_SYSTEM_PROMPT=

# Environment
NODE_ENV=development

# ==========================================
# NEW: Reliability & Infrastructure
# ==========================================

# Redis Configuration (OPTIONAL - for persistent job queue)
#
# WITHOUT Redis: Jobs use node-cron (works immediately, but lost on restart)
# WITH Redis: Jobs use BullMQ (persistent, automatic retries, survives restarts)
#
# Railway Setup (1 click):
#   1. In your Railway project: Click "New" → "Database" → "Add Redis"
#   2. Click on the Redis service → Copy the REDIS_URL variable
#   3. Add REDIS_URL to your app's environment variables
#
# Leave empty for simple node-cron scheduling (no persistence)
REDIS_URL=

# Local Redis (only if running Redis locally)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info                    # Options: debug, info, warn, error
ENABLE_FILE_LOGS=true             # Set to false to disable file logging
ENABLE_DISTRIBUTED_RATE_LIMITING=false  # Set to true for multi-instance rate limiting
